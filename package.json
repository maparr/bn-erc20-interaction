{
  "name": "erc20-interaction",
  "version": "1.0.0",
  "description": "A Node.js backend application that interacts with an ERC20 token using Viem",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "test": "npx hardhat test ./tests/MyToken.test.ts",
    "node": "npx hardhat node",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "viem": "^2.7.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "chai": "^4.4.1",
    "ethers": "^6.11.1",
    "hardhat": "^2.21.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
